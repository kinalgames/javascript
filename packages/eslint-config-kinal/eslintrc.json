{
  "env": {
    "browser": true,
    "node": true
  },
  "extends": ["airbnb", "airbnb-typescript", "airbnb/hooks", "prettier", "plugin:@typescript-eslint/recommended"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "react/jsx-filename-extension": ["error", { "extensions": [".tsx"] }],
    "react/jsx-props-no-spreading": "off",
    "react/require-default-props": "off",

    "@typescript-eslint/no-empty-interface": "off"
  }
}
